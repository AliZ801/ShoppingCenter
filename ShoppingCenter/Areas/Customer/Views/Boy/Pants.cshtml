@model ShoppingCenter.Models.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Pants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row col-12" style="margin:0 auto">
    <div class="col-2">
        <a asp-action="TShirts" class="btn btn-primary text-white form-control">T-Shirts</a>
    </div>
    <div class="col-2">
        <a asp-action="Shirts" class="btn btn-primary text-white form-control">Shirts</a>
    </div>
    <div class="col-2">
        <a asp-action="Pants" class="btn btn-primary text-white form-control">Pants</a>
    </div>
    <div class="col-2">
        <a asp-action="Shoes" class="btn btn-primary text-white form-control">Shoes</a>
    </div>
    <div class="col-2">
        <a asp-action="Assessories" class="btn btn-primary text-white form-control">Assessories</a>
    </div>
</div>

<br />

<div class="row col-12 d-flex flex-row justify-content-between" style="width:100%">

    @foreach (var item in Model.ProductsList)
    {
        <div class="card mb-4" style="width:300px">
            <div class="card-body">
                <img src="@item.ImageURL" class="img-thumbnail card-img-top" style="width:300px; height:220px" />
                <br />
                <h5 class="card-title">@item.Name</h5>
                <h5 class="text-danger">Price: $@item.Price</h5>
                <h6>Size: @item.ProductSize.Size</h6>
                <a asp-action="Detail" class="btn btn-primary text-white form-control" asp-route-id="@item.Id">View</a>
            </div>
        </div>
    }

</div>