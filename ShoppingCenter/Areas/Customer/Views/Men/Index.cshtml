@model ShoppingCenter.Models.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row col-12 bg-light justify-content-between" style="width:100%">

    @foreach (var item in Model.ProductsList)
    {
        @if (item.Category.CatName == "Men")
        {
            <div class="card mb-4" style="width:300px">
                <div class="card-body">
                    <img src="@item.ImageURL" class="img-thumbnail card-img-top" style="width:300px; height:220px" />
                    <br />
                    <h5 class="card-title">@item.Name</h5>
                    <h5 class="text-danger">Price: $@item.Price</h5>
                    <h6>Size: @item.ProductSize.Size</h6>
                    <a asp-action="Detail" class="btn btn-primary text-white rounded form-control" asp-route-id="@item.Id">View</a>
                </div>
            </div>
        }
    }

</div>