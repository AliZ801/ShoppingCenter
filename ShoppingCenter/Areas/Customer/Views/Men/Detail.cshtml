@model ShoppingCenter.Models.Products
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-deck row col-12 bg-secondary">
    <div class="card">
        <div class="card-body">
            <img src="@Model.ImageURL" />
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h3>@Model.Name</h3>
            <br />
            <h4>Price: $@Model.Price</h4>
            <br />
            <p>@Html.Raw(Model.Description)</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <a asp-action="#" class="btn btn-primary text-white rounded form-control">Add to Cart</a>
        </div>
    </div>
</div>