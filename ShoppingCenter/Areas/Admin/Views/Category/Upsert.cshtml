@model ShoppingCenter.Models.ViewModels.CategoryVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    @if(Model.Category.Id != 0)
    {
        ViewData["Title"] = "Edit Category";
    }
    else
    {
        ViewData["Title"] = "Create Category";
    }

    var title = "Create Category";
}

<div class="container">
    <div class="row">
        <div class="col-6 m-0 m-auto rounded" style="border: 2px solid #004481">
            <form method="post" asp-action="Upsert">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (Model.Category.Id != 0)
                {
                    <input type="hidden" asp-for="@Model.Category.Id" />
                    title = "Edit Category";
                }

                <div class="row">
                    <div class="col-12 text-center pt-2">
                        <h3>@title</h3>
                    </div>

                    <hr />

                    <div class="row col-12 form-group pt-2">
                        <div class="col-4">
                            <label asp-for="@Model.Category.CatName"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.Category.CatName" class="form-control" placeholder="Enter Category Name..." />
                            <span asp-validation-for="@Model.Category.CatName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row col-12 form-group">
                        @if(Model.Category.Id != 0)
                        {
                            <partial name="_EditAndBackBtn" model="@Model.Category.Id" />
                        }
                        else
                        {
                            <partial name="_CreateAndBackBtn" />
                        }
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{ 
    <style>
        input[type=text]{
            border: none;
            border-bottom: 1px solid #0094ff;
        }
        label {
            font-weight: 400;
        }
    </style>
}