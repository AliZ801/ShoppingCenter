
@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border">
    <div class="row p-2">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus" style="color:white"></i> &nbsp; New Category</a>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-bordered table-striped p-1" style="width:100%">
        <thead>
            <tr>
                <th>Catgory Id</th>
                <th>Category Name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/category.js"></script>
}